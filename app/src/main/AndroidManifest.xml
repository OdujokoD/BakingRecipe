<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bakingrecipe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecipeDetailActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.VideoPlayerActivity"
            android:parentActivityName=".ui.RecipeDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.RecipeDetailActivity" />
        </activity>

        <provider
            android:name=".provider.RecipeContentProvider"
            android:authorities="com.example.android.bakingrecipe.RecipeContentProvider"
            android:exported="false" />
        <provider
            android:name=".provider.IngredientContentProvider"
            android:authorities="com.example.android.bakingrecipe.IngredientContentProvider"
            android:exported="false" />
        <provider
            android:name=".provider.StepContentProvider"
            android:authorities="com.example.android.bakingrecipe.StepContentProvider"
            android:exported="false" />

        <receiver android:name=".BakingRecipeWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/baking_recipe_widget_info" />
        </receiver>
    </application>

</manifest>